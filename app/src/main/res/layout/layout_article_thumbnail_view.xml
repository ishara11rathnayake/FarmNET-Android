<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_abstract_article">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tv_article_title"
                android:paddingStart="10dp"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntubold"
                android:text="Does coal mining affect household food security? An empirical study of Dhanbad, India"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgv_article_thumbnail"
                android:paddingEnd="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ishara Rathnayake"
            android:paddingStart="15dp"
            android:fontFamily="@font/ubunturegular"
            android:paddingBottom="8dp"/>


    </LinearLayout>

</android.support.v7.widget.CardView>
